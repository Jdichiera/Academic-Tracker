<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ViewTermActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/term_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Some Term Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/term_view_start_date_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/term_view_title"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Term Start" />

        <TextView
            android:id="@+id/term_view_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/term_view_start_date_prompt"
            android:layout_alignParentEnd="true"
            android:paddingEnd="50dp"
            android:text="01-01-2020"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/course_view_end_date_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/term_view_start_date_prompt"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Term End" />

        <TextView
            android:id="@+id/course_view_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/course_view_end_date_prompt"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_alignParentEnd="true"
            android:paddingEnd="50dp"
            android:text="04-01-2020" />

        <Button
            android:id="@+id/button_view_course_list"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_view_end_date_prompt"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="View Course List" />

        <Button
            android:id="@+id/button_view_edit_term"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_view_end_date_prompt"
            android:text="Edit Term"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/button_view_delete_term"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_view_end_date_prompt"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#AC5454"
            android:text="Delete Term"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
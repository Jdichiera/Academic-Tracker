<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/term_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="Some Term Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/term_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/term_title"
            android:text="01-01-2020"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"></TextView>

        <TextView
            android:id="@+id/term_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/term_title"
            android:text="04-01-2020"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"></TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
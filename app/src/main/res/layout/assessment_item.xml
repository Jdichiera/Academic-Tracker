<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/assessment_title"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Some Asssssessment Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/assessment_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assessment_title"
            android:text="Due 01-01-2020" />

        <Button
            android:id="@+id/button_assessment_view_assessment"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/button_assessment_edit_assessment"
            android:onClick="viewAssessment"
            android:text="View" />

        <Button
            android:id="@+id/button_assessment_edit_assessment"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:onClick="editAssessment"
            android:text="Edit" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
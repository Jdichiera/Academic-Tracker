<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.AddEditTermActivity">

    <TextView
        android:id="@+id/add_term_title_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Title:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/add_term_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/add_term_title_prompt"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@id/add_term_title_prompt"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/add_term_start_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_term_title"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Start Date:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

<!--    <EditText-->
<!--        android:id="@+id/add_term_start"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/add_term_title"-->
<!--        android:layout_alignBottom="@id/add_term_start_prompt"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_marginLeft="20dp"-->
<!--        android:hint="Use mm/dd/yyyy format"-->
<!--        android:inputType="date"-->
<!--        android:textAlignment="viewEnd" />-->
    <DatePicker
        android:id="@+id/add_term_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_term_title"
        android:spinnersShown="true"
        android:calendarViewShown="false"
        android:layout_alignParentEnd="true"
        android:datePickerMode="spinner"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/add_term_end_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_term_start"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="End Date:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

<!--    <EditText-->
<!--        android:id="@+id/add_term_end"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/add_term_start"-->
<!--        android:layout_alignBottom="@id/add_term_end_prompt"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_marginLeft="20dp"-->
<!--        android:hint="Use mm/dd/yyyy format"-->
<!--        android:inputType="date"-->
<!--        android:textAlignment="viewEnd" />-->

    <DatePicker
        android:id="@+id/add_term_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_term_start"
        android:spinnersShown="true"
        android:calendarViewShown="false"
        android:layout_alignParentEnd="true"
        android:datePickerMode="spinner"
        android:textAlignment="viewEnd" />

    <Button
        android:id="@+id/button_save_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:onClick="saveTerm"
        android:text="Save Term" />

</RelativeLayout>